<h1>タスク一覧</h1>

<% if @tasks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク</th>
        <th>ステータス</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.id %></td>
          <td><%= task.content %></td>
          <td><%= task.status %></td>
          <td>
            <% if current_user == task.user %>
              <%= link_to "Edit", edit_task_path(task), class: "btn btn-primary btn-xs" %>
            <% end %>
          </td>
          <td>
            <% if current_user == task.user %>
              <%= link_to "Delete", task, 
                method: :delete, 
                data: {confirm: "削除しますか?"}, 
                class: "btn btn-danger btn-xs" 
              %>
            <% end %>            
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div>
    <%= paginate @tasks %>
  </div>

<% end %>
